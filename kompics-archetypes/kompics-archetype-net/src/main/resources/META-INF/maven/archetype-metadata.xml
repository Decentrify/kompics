<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="kompics-archetype-net">
  <requiredProperties>
    <requiredProperty key="kompicsVersion">
      <defaultValue>${version}</defaultValue>
    </requiredProperty>
    <requiredProperty key="myGroup">
      <defaultValue>se.sics.kompics</defaultValue>
    </requiredProperty>
    <requiredProperty key="myArtifact">
    	<defaultValue>dummy</defaultValue>
    </requiredProperty>
    <requiredProperty key="myVersion">
      <defaultValue>${version}</defaultValue>
    </requiredProperty>
    <requiredProperty key="mainClass">
    </requiredProperty>    
  </requiredProperties>
 
  <fileSets>
    <fileSet filtered="true" packaged="true">
      <directory>src/main/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true">
      <directory>src/test/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true">
      <directory>src/main/resources</directory>
      <includes>
        <include>**/*.properties</include>
      </includes>
    </fileSet>
  </fileSets>
  
</archetype-descriptor>